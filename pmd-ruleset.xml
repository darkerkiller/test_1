<?xml version="1.0"?>
<ruleset name="Advanced Text Editor Rules"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.net/ruleset_2_0_0.xsd">
    
    <description>
        PMD ruleset for Advanced Text Editor project
    </description>
    
    <!-- Best Practices Rules -->
    <rule ref="category/java/bestpractices.xml">
        <exclude name="GuardLogStatement"/>
        <exclude name="JUnitTestContainsTooManyAsserts"/>
    </rule>
    
    <!-- Code Style Rules -->
    <rule ref="category/java/codestyle.xml">
        <exclude name="AtLeastOneConstructor"/>
        <exclude name="LocalVariableCouldBeFinal"/>
        <exclude name="MethodArgumentCouldBeFinal"/>
        <exclude name="OnlyOneReturn"/>
        <exclude name="LongVariable"/>
        <exclude name="ShortVariable"/>
    </rule>
    
    <!-- Design Rules -->
    <rule ref="category/java/design.xml">
        <exclude name="GodClass"/>
        <exclude name="TooManyMethods"/>
        <exclude name="ExcessiveClassLength"/>
        <exclude name="ExcessiveMethodLength"/>
        <exclude name="CyclomaticComplexity"/>
    </rule>
    
    <!-- Documentation Rules -->
    <rule ref="category/java/documentation.xml">
        <exclude name="CommentRequired"/>
        <exclude name="CommentSize"/>
    </rule>
    
    <!-- Error Prone Rules -->
    <rule ref="category/java/errorprone.xml">
        <exclude name="AvoidDuplicateLiterals"/>
        <exclude name="AvoidFieldNameMatchingMethodName"/>
        <exclude name="BeanMembersShouldSerialize"/>
        <exclude name="DataflowAnomalyAnalysis"/>
    </rule>
    
    <!-- Multithreading Rules -->
    <rule ref="category/java/multithreading.xml">
        <exclude name="AvoidSynchronizedAtMethodLevel"/>
        <exclude name="UseConcurrentHashMap"/>
    </rule>
    
    <!-- Performance Rules -->
    <rule ref="category/java/performance.xml">
        <exclude name="AvoidInstantiatingObjectsInLoops"/>
        <exclude name="ConsecutiveLiteralAppends"/>
        <exclude name="InefficientStringBuffering"/>
        <exclude name="InsufficientStringBufferDeclaration"/>
        <exclude name="StringToString"/>
        <exclude name="UseStringBufferForStringAppends"/>
        <exclude name="UseStringBufferLength"/>
    </rule>
    
    <!-- Security Rules -->
    <rule ref="category/java/security.xml"/>
    
    <!-- Custom Rules -->
    <rule name="AvoidSystemExit"
          language="java"
          message="System.exit() should not be used in GUI applications"
          class="net.sourceforge.pmd.lang.rule.XPathRule">
        <description>
            System.exit() should not be used in GUI applications as it terminates the JVM abruptly.
        </description>
        <priority>3</priority>
        <properties>
            <property name="xpath">
                <value>
                    //PrimaryPrefix/Name[@Image='System.exit']
                </value>
            </property>
        </properties>
        <example>
            <![CDATA[
            public void someMethod() {
                System.exit(0); // This is not recommended
            }
            ]]>
        </example>
    </rule>
    
</ruleset>